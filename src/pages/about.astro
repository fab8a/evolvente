---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";

const { title = "Evolvente", subtitle = "Estudio independiente de arquitectura y dise√±o" } =
    Astro.props;

import { Image } from "astro:assets";
import aboutImage from "../assets/images/background.webp";
---

<Base>
    <!-- About Page Structure -->
    <Image src={aboutImage} alt="" class="about-image" />
    <section class="about-container">
        <!-- Left Column - Content -->
        <div class="about-content">
            <!-- Company History Section -->
            <div class="history-section">
                <h2>Our History</h2>
                <p>[Company history content]</p>
            </div>

            <!-- Mission Section -->
            <div class="mission-section">
                <h2>Our Mission</h2>
                <p>[Mission statement content]</p>
            </div>

            <!-- Values Section -->
            <div class="values-section">
                <h2>Our Values</h2>
                <ul class="values-list">
                    <li>[Value 1]</li>
                    <li>[Value 2]</li>
                    <li>[Value 3]</li>
                    <!-- Add more values as needed -->
                </ul>
            </div>
        </div>

        <!-- Right Column - Visual Elements -->
        <div class="about-visuals">
            <!-- Company Image -->
            <div class="company-image">
                <img src="[image-path]" alt="Company Image" />
            </div>

            <!-- Icons/Graphics for Values -->
            <div class="values-icons">
                <div class="icon">
                    <img src="[icon1-path]" alt="Value 1 Icon" />
                    <span>[Value 1 Label]</span>
                </div>
                <!-- Add more icons as needed -->
            </div>

            <!-- Additional Visual Elements -->
            <div class="additional-graphics">
                <!-- Add any additional visual elements -->
            </div>
        </div>
    </section>

    <!-- CSS Structure -->
    <style>
        .about-container {
            display: flex;
            justify-content: space-between;
        }
        .about-content {
            flex: 1;
            padding: [value];
        }
        .about-image {
            width: 100%;
            height: 300px; /* fixed height for the container */
            object-fit: cover; /* crops the image while maintaining aspect ratio */
            object-position: center; /* controls which part of the image to show */
        }
        .about-visuals {
            flex: 1;
            padding: [value];
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .about-container {
                flex-direction: column;
            }
        }

        /* Add additional styling as needed */
    </style>
</Base>
