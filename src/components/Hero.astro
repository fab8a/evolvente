---
const { title = "Evolvente", subtitle = "Estudio independiente de arquitectura y dise√±o" } =
    Astro.props;

import { getImage } from "astro:assets";
import backgroundImage from "../assets/images/hero.jpg";
const optimizedBackground = await getImage({
    src: backgroundImage,
    format: "webp", // Convert to WebP for better compression
    quality: 80, // Adjust quality as needed
    width: 1920, // Resize to appropriate width
});
---

<section
    class="hero"
    style={`background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.1)), url(${optimizedBackground.src});`}
>
    <div class="hero-content">
        <img src="/isotipo.png" alt="Logotipo Evolvente Arquitectura" width="200px" />
        <div class="hero-text">
            <h1>{subtitle}</h1>
        </div>
    </div>
</section>

<style>
    .hero {
        min-height: calc(
            100vh - var(--header-height, 80px)
        ); /* This makes it fill the remaining viewport */
        width: 100%;
        background-size: cover;
        background-position: center;
        display: flex;
        color: white;
    }
    .hero-content {
        color: var(--color-primary);
        width: 99%;
        margin-top: -11px;
        display: flex;
        flex-direction: column;
    }
    .hero-content > img {
        margin-left: 74px;
    }
    .hero-text {
        font-size: 2.5rem;
        font-family: "HelveticaNeue-UltraLight";
        text-align: center;
        width: 100%;
        display: flex;
        justify-content: center;
    }
</style>
